{
    "Id" : "google-chrome",
    "TryFile": "/opt/google/chrome/chrome",
    "Apply": {
        "InitUsage": 10,
        "After": [ { "scope": "snapshot", "id:": "DDE" } ],
        "When": [ {"id":"idle"}, {"scope":"dde", "id":"dde-launcher"}]
    },
    "Capture": {
        "ExpireLimit": 0,
        "Aftter": ["uiapp:google-chrome"],
        "Method": [
            {
                "Type": "UIApp",
                "UseMincore": true,
                "UIApp": "google-chrome.desktop"
            },
            {
                "Type": "static",
                "UseMincore": true,
                "Static": "$HOME/.config/google-chrome",
                "Blacklist": [
                    "$root/Crash Reports",
                    "$root/Webstore Downloads"
                ]
            }
        ]
    }
}
