{
    "Id" : "BASIC",

    "Description": "basic system snapshot",

    "Apply": {
        "Before": ["systemd:sysinit.target"],
        "After": [ "systemd:local-fs.target" ]
    },
    "Capture": {
        "Before": ["systemd:lightdm.service", "snapshot:BASIC"],
        "After": [ "systemd:lightdm.service"],

        "Method": [
            {
                "Type": "mincores",
                "Blacklist": ["/boot"],
                "Mincores": ["/"]
            }
        ]
    }
}
